{
  "productName": "Kungfu",
  "artifactName": "${productName}-${buildVersion}-${os}-${arch}-${channel}.${ext}",
  "generateUpdatesFilesForAllChannels": true,
  "appId": "com.kungfu-trader.kungfu-app",
  "directories": {
    "output": "build/app"
  },
  "publish": [
    {
      "provider": "generic",
      "url": "http://www.kungfu-trader.com"
    }
  ],
  "buildDependenciesFromSource": true,
  "npmRebuild": false,
  "electronVersion": "13.2.0",
  "files": [
    "dist/app/**/*",
    {
      "from": ".",
      "to": "dist/app",
      "filter": [
        "resources"
      ]
    },
    "!kungfu-core/",
    "kungfu-core/package.json",
    "kungfu-core/src/es"
  ],
  "extraResources": [
    {
      "from": "../core/dist/kfc",
      "to": "kfc",
      "filter": [
        "!**/btdata"
      ]
    },
    {
      "from": "../core/build/python/dist",
      "to": "kungfu-resources/python",
      "filter": [
        "kungfu-*-py3-*.whl"
      ]
    },
    {
      "from": "./resources",
      "to": "kungfu-resources",
      "filter": [
        "config/*",
        "key/*"
      ]
    },
    {
      "from": "../cli/build/cli",
      "to": "kungfu-cli",
      "filter": [
        "kungfu_node.node",
        "kungfu-cli",
        "kungfu-cli.*",
        "libkungfu.*",
        "pykungfu*",
        "kungfubuildinfo.json"
      ]
    }
  ],
  "asar": false,
  "dmg": {
    "contents": [
      {
        "x": 410,
        "y": 150,
        "type": "link",
        "path": "/Applications"
      },
      {
        "x": 130,
        "y": 150,
        "type": "file"
      }
    ]
  },
  "mac": {
    "icon": "./resources/logo/icon.icns",
    "type": "distribution",
    "target": [
      "dmg"
    ]
  },
  "win": {
    "icon": "./resources/logo/icon.ico",
    "target": [
      {
        "target": "nsis",
        "arch": [
          "x64"
        ]
      }
    ]
  },
  "linux": {
    "icon": "./resources/logo/icn.icns",
    "target": [
      "rpm",
      "appimage"
    ]
  },
  "nsis": {
    "oneClick": false,
    "allowElevation": true,
    "allowToChangeInstallationDirectory": true,
    "installerIcon": "./resources/logo/icon.ico",
    "uninstallerIcon": "./resources/logo/icon.ico",
    "installerHeaderIcon": "./resources/logo/icon.ico",
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true
  }
}