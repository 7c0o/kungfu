{
  "compilerOptions": {
    "target": "es2015",
    "module": "es2015",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "typeRoots": [
      "node_modules/@types",
      "node_modules/@kungfu-trader/kungfu-uicc/typings",
      "../../node_modules/@types",
      "../../node_modules/@kungfu-trader/kungfu-uicc/typings",
      "typings"
    ],
    "baseUrl": ".",
    "paths": {
      "@kungfu-trader/kungfu-cli/*": [
        "src/*"
      ],
      "@kungfu-trader/kungfu-uicc/*": [
        "node_modules/@kungfu-trader/kungfu-uicc/src/*",
        "../uicc/src/*"
      ]
    }
  },
  "exclude": [
    "node_modules"
  ]
}
