{
  "name": "@kungfu-trader/kungfu-workspaces",
  "author": {
    "name": "kungfu-trader",
    "email": "info@kungfu.link"
  },
  "description": "Kungfu Trader Workspaces",
  "license": "Apache-2.0",
  "private": true,
  "workspaces": [
    "framework/*",
    "a2/*",
    "extensions/*",
    "developer/*",
    "artifact"
  ],
  "engines": {
    "node": ">=14 <15",
    "yarn": "^1.18.0"
  },
  "scripts": {
    "foreach": "wsrun --serial --exclude-missing --fast-exit",
    "postinstall": "yarn foreach postinstall",
    "build": "yarn foreach build",
    "clean": "yarn foreach clean",
    "format": "yarn foreach format",
    "lint": "eslint --ext .ts .",
    "package": "yarn foreach package",
    "rebuild": "yarn clean && yarn build",
    "reformat": "prettier --write --parser typescript",
    "reformat:ts": "yarn reformat \"(framework|extensions|developer|artifact)/**/*.ts?(x)\"",
    "reformat:js": "yarn reformat \"(framework|extensions|developer|artifact)/**/*.js\""
  },
  "dependencies": {
    "lerna": "^4.0.0",
    "wsrun": "^5.0.0"
  },
  "devDependencies": {
    "@typescript-eslint/parser": "^4.29.0",
    "@typescript-eslint/eslint-plugin": "^4.29.0",
    "eslint": "^7.14.0",
    "prettier": "^2.3.0",
    "typescript": "~4.4.0"
  },
  "resolutions": {
    "axios": "^0.21.1",
    "core-js": "^3.16.0",
    "highlight.js": "^11.0.0",
    "lodash.merge": "^4.6.2",
    "node-gyp": "^8.0.0",
    "uuid": "^7.0.0"
  }
}
