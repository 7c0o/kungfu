{
  "name": "kungfu",
  "author": "taurus.ai",
  "version": "2.2.0",
  "description": "KungFu Trader",
  "license": "Apache-2.0",
  "private": true,
  "workspaces": ["core", "cli", "app"],
  "scripts": {
    "postinstall": "yarn wsrun --serial install-deps",
    "build": "yarn run clean && yarn run env-electron && yarn wsrun --serial --fast-exit build",
    "build-cli": "yarn run clean && yarn run env-cli && yarn wsrun --serial --fast-exit build-cli",
    "env-cli": "npm config set kungfu-core:runtime node",
    "env-electron": "npm config set kungfu-core:runtime electron",
    "clean": "yarn wsrun clean"
  },
  "dependencies": {
    "wsrun": "^5.0.0",
    "nan": "0.3.0"
  }
}

