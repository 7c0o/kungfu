{
  "name": "@kungfu-trader/kungfu-workspaces",
  "author": {
    "name": "kungfu-trader",
    "email": "info@kungfu.link"
  },
  "description": "Kungfu Trader Workspaces",
  "license": "Apache-2.0",
  "private": true,
  "workspaces": [
    "framework/*",
    "developer/*",
    "extensions/*",
    "installer"
  ],
  "engines": {
    "node": ">=14"
  },
  "scripts": {
    "foreach": "wsrun --serial --exclude-missing --fast-exit",
    "postinstall": "yarn foreach postinstall",
    "build": "yarn foreach build",
    "clean": "yarn foreach clean",
    "format": "yarn foreach format",
    "lint": "eslint --ext .ts .",
    "package": "yarn foreach package",
    "rebuild": "yarn clean && yarn build",
    "reformat": "prettier --write --parser typescript",
    "reformat:ts": "yarn reformat \"(framework|developer|extensions)/**/node/*.ts?(x)\"",
    "reformat:js": "yarn reformat \"(framework|developer|extensions)/**/node/*.js\""
  },
  "dependencies": {
    "lerna": "^4.0.0",
    "wsrun": "^5.0.0",
    "yarn": "^1.22.0"
  },
  "devDependencies": {
    "@ls-lint/ls-lint": "^1.9.0",
    "@typescript-eslint/parser": "^4.29.0",
    "cross-env": "1.0.0",
    "cross-var": "1.0.0",
    "eslint": "^7.14.0",
    "prettier": "^2.3.0",
    "prettier-eslint-cli": "^5.0.0",
    "typescript": "^4.3.5"
  }
}
