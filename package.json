{
  "name": "kungfu",
  "author": "kungfu-origin",
  "description": "Kungfu Workspaces",
  "license": "Apache-2.0",
  "private": true,
  "workspaces": [
    "framework/*",
    "developer/*",
    "extensions/*"
  ],
  "scripts": {
    "postinstall": "wsrun --serial --exclude-missing --fast-exit postinstall",
    "build": "wsrun --serial --exclude-missing --fast-exit build",
    "build-cli": "wsrun --serial --exclude-missing --fast-exit build-cli",
    "clean": "wsrun --serial --exclude-missing --fast-exit clean",
    "package": "wsrun --serial --exclude-missing --fast-exit package",
    "rebuild": "yarn run clean && yarn run build"
  },
  "dependencies": {
    "@mapbox/node-pre-gyp": "^1.0.0",
    "cross-env": "1.0.0",
    "cross-var": "1.0.0",
    "node-gyp": "^7.1.0"
  },
  "devDependencies": {
    "lerna": "^4.0.0",
    "wsrun": "^5.0.0"
  }
}
