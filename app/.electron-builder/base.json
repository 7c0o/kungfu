{
    "productName": "Kungfu",
    "artifactName": "${productName}-${buildVersion}-${os}-${arch}-${channel}.${ext}",
    "generateUpdatesFilesForAllChannels": true,
    "appId": "taurus.ai.KungFu.Trader",
    "directories": {
      "output": "build/app"
    },
    "publish": [
      {
        "provider": "generic",
        "url": "http://taurusai.com/kungfu"
      }
    ],
    "files": [
      "dist/app/**/*",
      {
        "from": ".",
        "to": "dist/app",
        "filter": [
          "resources"
        ]
      },
      "!**/kungfu-core/*",
      "!**/kungfu-core/**/*",
      "!**/kungfu-core/**/**/*",
      "**/kungfu-core/build/*/libkungfu.*",
      "**/kungfu-core/build/*/kungfu.*",
      "**/kungfu-core/build/*/pykungfu*",
      "**/kungfu-core/build/*/node_kungfu.node",
      "**/kungfu-core/build/*/kungfubuildinfo.json",
      "**/kungfu-core/node/*",
      "**/kungfu-core/node/**/*",
      "**/kungfu-core/package.json"
    ],
    "extraResources": [
      {
        "from": "../core/build/kfc",
        "to": "kfc",
        "filter": [
          "!**/btdata"
        ]
      },
      {
        "from": "../core/build/python/dist",
        "to": "kungfu-resources/python",
        "filter": [
          "kungfu-*-py3-*.whl"
        ]
      },
      {
        "from": "./resources",
        "to": "kungfu-resources",
        "filter": [
          "config/*",
          "key/*"
        ]
      },
      {
        "from": "../cli/build/cli",
        "to": "kungfu-cli",
        "filter": [
          "fsevents.node",
          "kungfu-cli",
          "kungfu-cli.*",
          "node_kungfu.node",
          "kungfu.dll",
          "kungfubuildinfo.json",
          "pykungfu*",
          "libkungfu.*"
        ]
      }
    ],
    "asar": false, 
    "dmg": {
      "contents": [
        {
          "x": 410,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 130,
          "y": 150,
          "type": "file"
        }
      ]
    },
    "mac": {
      "icon": "./resources/logo/icon.icns",
      "type": "distribution",
      "target": [
        "dmg"
      ]
    },
    "win": {
      "icon": "./resources/logo/icon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "linux": {
      "icon": "./resources/logo/icn.icns",
      "target": [
        "rpm",
        "appimage"
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "./resources/logo/icon.ico",
      "uninstallerIcon": "./resources/logo/icon.ico",
      "installerHeaderIcon": "./resources/logo/icon.ico",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
}